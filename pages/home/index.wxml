<!--pages/home/index.wxml-->
<view  style='position: relative'>
  <view class='main-col main-bg'>
      <tabRow tabArray='{{tabArray}}' bind:confirmEvent="tabClick" curIndex="{{curIndex}}" />
      <view  style='padding-left:30rpx;padding-right:30rpx;margin-top:92rpx;'>
      
     
      <single-row 
        title="计算方式" 
        detail="{{countType==0?'按贷款总额':'按房价总额'}}"
        data="countType"
        bind:confirmEvent="rowClick"/>
        <rowLine/>
        <block wx:if="{{countType==1}}">
          <inputRow
          title="房价总额" 
          detail="{{housePrice}}"
          data="housePrice"
          endText="万"
          inputType='digit'
          bind:confirmEvent="inputCallBack"/>
          <rowLine/>

          <single-row 
          title="贷款比例" 
          detail="{{loanratio}}成"
          data="loanratio"
          bind:confirmEvent="rowClick"/>
          <rowLine/>
        </block>
         <inputRow
          title="贷款总额" 
          detail="{{loantotle}}"
          data="loantotle"
          endText="万"
          inputType='number'
          length='4'
          bind:confirmEvent="inputCallBack"/>
          <rowLine/>
          
          <single-row wx:if='{{curIndex != 2}}'
          title="贷款利率" 
          detail="{{curIndex==0?rateText:rateTextNew}}({{curIndex==0?interestrate:interestratenew}}%)"
          data="interestrate"
          bind:confirmEvent="rowClick"/>
          <rowLine/>


          <!-- <inputRow wx:if='{{curIndex != 2}}'
          title="贷款利率" 
          detail="{{curIndex==0?interestrate:interestratenew}}"
          data="interestrate"
          endText="%"
          inputType='digit'
          length='6'
          bind:confirmEvent="inputCallBack"/>
          <rowLine/> -->
          <block wx:if='{{curIndex == 2}}'>
            <inputRow
            title="公积金贷款1" 
            detail="{{ggjloantotle}}"
            data="ggjloantotle"
            endText="万"
            inputType='number'
            length='4'
            bind:confirmEvent="inputCallBack"/>
            <rowLine/>
            <single-row 
              title="公积金利率" 
              detail="{{rateText}}({{interestrate}}%)"
              data="interestrate"
              bind:confirmEvent="rowClick"/>
            <rowLine/>
            <inputRow
              title="商业贷款" 
              detail="{{loantotlenew}}"
              data="loantotlenew"
              endText="万"
              inputType='number'
              length='4'
              bind:confirmEvent="inputCallBack"/>
            <rowLine/>
            <single-row
              title="商贷利率" 
              detail="{{rateTextNew}}({{interestratenew}}%)"
              data="interestratenew"
              bind:confirmEvent="rowClick"/>
            <rowLine/>
          </block>

          <single-row 
          title="贷款年限" 
          detail="{{loantime}}年"
          data="loantime"
          bind:confirmEvent="rowClick"/>
          <rowLine/>

         <view class='sure main-white main-t32 main-center  main-c' bindtap='sure' >开始计算</view>
         <view class='main-s20 main-c99 desc main-center'>
         贷款利率仅供计算使用，实际交易利率折扣由银行评估
         </view>
      </view>
  </view>
  <!-- <view class='main-center' style='margin:30rpx' bindtap='showImg'>
    <canvas canvas-id="myCanvas"  style="width:100%;height:200rpx;"></canvas>
   
  </view> -->
  <!-- <view class='main-center' style='margin-top:40rpx;margin-bottom:40rpx' bindtap='showImg'>
    <image class='code' src='../../images/ss.png'></image>
  </view> -->
  <picker-one showChoose="{{showChoose}}" showData="{{chooseData}}"  bind:bindChange="bindChange"  bind:showModel="showModel" bind:dataSure="dataSure" vauleIndex="{{vauleIndex}}"/>

  <picker-two showChoose="{{showChooseTwo}}" showData="{{rateData}}"  bind:showModel="showModelTwo" bind:dataSure="dataSureTwo"/>
</view>

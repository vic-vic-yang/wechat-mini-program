.show{
  position: relative;

}
.row{
  height: 60rpx;
  align-items: center
}
.card{
  width:100%rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 0px 8rpx 0rpx rgba(0,0,0,0.5);
  border-radius:10rpx;
  margin-top: 40rpx;
  margin-bottom: 40rpx;

  margin-left: 40rpx;
  margin-right: 40rpx;
  
}
.left{

  
  border-bottom-left-radius: 10rpx;
  

}
.right{

